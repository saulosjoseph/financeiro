generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts        Account[]
  sessions        Session[]
  familyMembers   FamilyMember[]
  entradas        Entrada[]
  saidas          Saida[]

  @@map("users")
}

model Family {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  members     FamilyMember[]
  invitations FamilyInvitation[]
  shareLinks  FamilyShareLink[]
  entradas    Entrada[]
  saidas      Saida[]
  tags        Tag[]

  @@map("families")
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#6B7280") // hex color
  familyId  String   @map("family_id")
  createdAt DateTime @default(now()) @map("created_at")

  family   Family       @relation(fields: [familyId], references: [id], onDelete: Cascade)
  entradas EntradaTag[]
  saidas   SaidaTag[]

  @@unique([familyId, name])
  @@map("tags")
}

model FamilyMember {
  id        String   @id @default(cuid())
  familyId  String   @map("family_id")
  userId    String   @map("user_id")
  role      String   @default("member") // "admin" or "member"
  createdAt DateTime @default(now()) @map("created_at")

  family Family @relation(fields: [familyId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([familyId, userId])
  @@map("family_members")
}

model FamilyInvitation {
  id         String   @id @default(cuid())
  familyId   String   @map("family_id")
  email      String
  token      String   @unique
  role       String   @default("member")
  invitedBy  String   @map("invited_by")
  expiresAt  DateTime @map("expires_at")
  acceptedAt DateTime? @map("accepted_at")
  createdAt  DateTime @default(now()) @map("created_at")

  family Family @relation(fields: [familyId], references: [id], onDelete: Cascade)

  @@unique([familyId, email])
  @@index([token])
  @@index([email])
  @@map("family_invitations")
}

model FamilyShareLink {
  id        String    @id @default(cuid())
  familyId  String    @map("family_id")
  token     String    @unique
  role      String    @default("member")
  createdBy String    @map("created_by")
  usedBy    String?   @map("used_by")
  usedAt    DateTime? @map("used_at")
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")

  family Family @relation(fields: [familyId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("family_share_links")
}

model Entrada {
  id               String   @id @default(cuid())
  familyId         String   @map("family_id")
  userId           String   @map("user_id")
  amount           Decimal  @db.Decimal(10, 2)
  description      String?
  source           String? // "salary", "freelance", "investment", etc
  date             DateTime @default(now())
  isRecurring      Boolean  @default(false) @map("is_recurring")
  recurringType    String? @map("recurring_type") // "weekly", "biweekly", "monthly", "bimonthly", "quarterly", "semiannual", "annual"
  recurringDay     Int? @map("recurring_day") // Day of month (1-31) or day of week (0-6 for weekly)
  recurringEndDate DateTime? @map("recurring_end_date")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  family Family       @relation(fields: [familyId], references: [id], onDelete: Cascade)
  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags   EntradaTag[]

  @@index([familyId, date])
  @@index([isRecurring])
  @@map("entradas")
}

model EntradaTag {
  id        String @id @default(cuid())
  entradaId String @map("entrada_id")
  tagId     String @map("tag_id")

  entrada Entrada @relation(fields: [entradaId], references: [id], onDelete: Cascade)
  tag     Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([entradaId, tagId])
  @@map("entrada_tags")
}

model Saida {
  id               String   @id @default(cuid())
  familyId         String   @map("family_id")
  userId           String   @map("user_id")
  amount           Decimal  @db.Decimal(10, 2)
  description      String?
  category         String? // "food", "transport", "health", "education", etc
  date             DateTime @default(now())
  isRecurring      Boolean  @default(false) @map("is_recurring")
  recurringType    String? @map("recurring_type") // "weekly", "biweekly", "monthly", "bimonthly", "quarterly", "semiannual", "annual"
  recurringDay     Int? @map("recurring_day") // Day of month (1-31) or day of week (0-6 for weekly)
  recurringEndDate DateTime? @map("recurring_end_date")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  family Family     @relation(fields: [familyId], references: [id], onDelete: Cascade)
  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags   SaidaTag[]

  @@index([familyId, date])
  @@index([isRecurring])
  @@map("saidas")
}

model SaidaTag {
  id      String @id @default(cuid())
  saidaId String @map("saida_id")
  tagId   String @map("tag_id")

  saida Saida @relation(fields: [saidaId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([saidaId, tagId])
  @@map("saida_tags")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
